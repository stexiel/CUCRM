            "audited": false,
            "isCustom": true
        },
        "orgUnits": {
            "type": "hasMany",
            "foreign": "orgUnitParent",
            "entity": "COrgUnit",
            "audited": false,
            "isCustom": true
        },
        "orgUnitParent": {
            "type": "belongsTo",
            "foreign": "orgUnits",
            "entity": "COrgUnit",
            "audited": false,
            "isCustom": true
        }
    },
    "collection": {
        "orderBy": "createdAt",
        "order": "desc"
    },
    "indexes": {
        "name": {
            "columns": [
                "name",
                "deleted"
            ]
        },
        "assignedUser": {
            "columns": [
                "assignedUserId",
                "deleted"
            ]
        },
        "createdAt": {
            "columns": [
                "createdAt"
            ]
        },
        "createdAtId": {
            "unique": true,
            "columns": [
                "createdAt",
                "id"
            ]
        }
